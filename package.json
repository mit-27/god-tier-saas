{
  "name": "god-tier-saas-template",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "concurrently \"turbo run dev --filter=@template/web\" \"turbo run dev --filter=@template/server\"",
    "dev:shared": "turbo run dev --filter=@template/shared",

    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
